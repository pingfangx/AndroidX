<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shader.tile.TileModeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.pingfangx.bitmapdemo.shader.ClampBitmapShaderView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp" />

        <com.pingfangx.bitmapdemo.shader.MirrorBitmapShaderView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp" />

        <com.pingfangx.bitmapdemo.shader.RepeatBitmapShaderView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>